---
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.vue";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Gökay Yıldız Fullstack Developer" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/favicon-16x16.png"
		/>
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
		<meta name="msapplication-TileColor" content="#da532c" />
		<meta name="theme-color" content="#ffffff" />
		<meta name="author" content="Gökay Yıldız" />
		<meta
			name="keywords"
			content="Gökay Yıldız,Web Developer,Frontend Developer,
			React Developer,Vue Developer,JavaScript Developer,
			TypeScript Developer,Node.js Developer,HTML Developer,
			CSS Developer,Sass Developer,Less Developer,Stylus Developer,
			PostCSS Developer,Web Performance,Web Accessibility,
			Web Standards,Web Best Practices,Web Development,
			Frontend Development,React Development,Vue Development,
			JavaScript Development,TypeScript Development,Node.js Development,
			HTML Development,CSS Development,Sass Development,Less Development,
			Stylus Development,PostCSS Development,Web Performance Development,
			Web Accessibility Development,Web Standards Development,
			Web Best Practices Development"
		/>
		<meta name="robots" content="index, follow" />
		<meta property="og:title" content={title} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:image" content="/og-image.png" />
		<meta property="og:description" content="Astro description" />
		<meta property="og:site_name" content="Gökay Yıldız's Website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta
			name="twitter:description"
			content="Gökay Yıldız Fullstack Developer"
		/>
		<meta name="twitter:image" content="/og-image.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body
		class="mx-auto flex min-h-screen max-w-[872px] flex-col gap-9 dark:bg-neutral-950 px-10 py-8 text-sm dark:text-neutral-400 text-neutral-600 md:gap-20 md:py-16"
	>
		<Header client:load />
		<div
			class="hidden md:fixed z-0 h-[134px] w-[134px] lg:w-[300px] lg:h-[300px] rounded-full bg-red-500 blur-[150px] md:blur-[350px] opacity-50 left-0 top-0"
		>
		</div>
		<div
			class="hidden md:fixed z-0 h-[134px] w-[134px] lg:w-[300px] lg:h-[300px] rounded-full bg-violet-500 blur-[150px] md:blur-[350px] opacity-50 right-0 bottom-0"
		>
		</div>
		<main class="flex flex-col gap-20 h-full">
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--font-open-sans: "Open Sans", sans-serif;
	}
	html {
		line-height: 1.5;
		-webkit-text-size-adjust: 100%;
		-moz-tab-size: 4;
		-o-tab-size: 4;
		tab-size: 4;
		font-family:
			var(--font-open-sans),
			ui-sans-serif,
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			"Helvetica Neue",
			Arial,
			"Noto Sans",
			sans-serif,
			"Apple Color Emoji",
			"Segoe UI Emoji",
			"Segoe UI Symbol",
			"Noto Color Emoji";
		font-feature-settings: normal;
		font-variation-settings: normal;
	}
	em {
		font-style: normal;
		color: #dc2626;
	}
	html.dark em {
		color: #f87171;
	}
</style>
